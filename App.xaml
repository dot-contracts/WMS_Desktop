<Application x:Class="FicmaDT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Dashboard.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design in XAML Toolkit -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <!-- Your custom styles -->
                <ResourceDictionary Source="pack://application:,,,/FicmaDT;component/UIcomponents/Styles/FlatButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Font Family Definition -->
            <FontFamily x:Key="MyFontFamily">pack://application:,,,/Fonts/Comfortaa-VariableFont_wght.ttf#MyFont</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
